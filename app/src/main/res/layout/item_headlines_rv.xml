<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/articleLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/background_rv_headlines"
    app:cardCornerRadius="10dp">

    <ImageView
        android:id="@+id/articleImg"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/articleTitle"
        style="@style/textViewRegister"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:text="article Title"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/articleImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newsDesciption"
        style="@style/textViewRegister"
        android:layout_margin="4dp"
        android:text="article desciption"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@+id/articleTitle"
        app:layout_constraintTop_toBottomOf="@id/articleTitle" />



</androidx.constraintlayout.widget.ConstraintLayout>