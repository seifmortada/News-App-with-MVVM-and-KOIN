<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="100dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/background_rv_sources"
    app:cardCornerRadius="10dp">

    <TextView
        android:id="@+id/newsName"
        style="@style/textViewRegister"
        android:layout_margin="4dp"
        android:text="News Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newsCategory"
        style="@style/textViewRegister"
        android:layout_margin="4dp"
        android:text="News Category"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newsLanguage"
        style="@style/textViewRegister"
        android:layout_marginTop="4dp"
        android:text="News Language"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/newsCategory"
        app:layout_constraintTop_toBottomOf="@+id/newsCategory" />

    <TextView
        android:id="@+id/newsDescription"
        style="@style/textViewRegister"
        android:layout_margin="4dp"
        android:text="News Description"
        android:textColor="@color/white"
        android:maxLines="2"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsLanguage" />
</androidx.constraintlayout.widget.ConstraintLayout>