<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/mainColor</item>
         <item name="colorSecondary">@color/secondryColor</item>
    </style>

    <style name="Theme.NewsApp" parent="Base.Theme.NewsApp" />

    <style name="textViewRegister">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="EditTextRegister">
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#8E8888</item>
        <item name="android:backgroundTint">@color/secondryColor</item>
    </style>
</resources>